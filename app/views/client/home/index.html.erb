<%= render partial: 'client/shared/flash_sign_in_out' %>
<%= render 'client/shared/banner', banners: @banners %>

<!-- Winners Feedback Section -->
<div class="container mt-5">
  <h4 class="text-center mb-4">Winners' Feedback</h4>
  <div class="container">
    <div class="row">
      <% if @winners.empty? %>
        <div class="col-12 text-center text-muted">
          No feedback history available.
        </div>
      <% else %>
        <% @winners.each do |winner| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
              <!-- Image Section -->
              <div class="p-3">
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                  <% if winner.picture.present? %>
                    <%= image_tag winner.picture.url, class: "img-fluid rounded", alt: "Winner Image", style: "max-height: 100%; max-width: 100%;" %>
                  <% else %>
                    <span class="text-muted">No image available</span>
                  <% end %>
                </div>
              </div>

              <!-- Card Footer -->
              <div class="card-footer justify-content-center gap-2">
                <h5 class="card-title fw-bold">
                  <%= winner.user&.username || "Anonymous" %>
                </h5>
                <p class="card-text">
                  <%= winner.comment %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="col-md-4 mb-4">
          <%= link_to client_share_index_path, class: "text-decoration-none" do %>
            <div class="card h-100 shadow-sm">
              <div class="d-flex align-items-center justify-content-center h-100">
                <h5 class="text-muted text-center">More...</h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!--Card-->
<div class="container mt-5">
  <h4 class="text-center mb-4">Coming Soon</h4>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
      <% @items.each do |item| %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= item.item_image.url if item.item_image.present? %>" class="card-img-top img-fluid p-2" alt="<%= item.name %>" style="height: 200px; object-fit: cover;">
            <div class="card-body text-center">
              <h5 class="card-title mb-3" style="font-weight: bold; color: #007bff;"><%= item.name %></h5>

              <%= link_to 'Buy Ticket', client_lottery_path(item), class: "btn btn-primary w-100 py-2", style: "font-size: 1.1rem;" %>
            </div>
          </div>
        </div>
      <% end %>

    <div class="col">
      <%= link_to client_lottery_index_path, class: "text-decoration-none" do %>
        <div class="card h-100 shadow-sm">
          <div class="d-flex align-items-center justify-content-center h-100" style="height: 200px;">
            <h5 class="text-muted text-center">More...</h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>