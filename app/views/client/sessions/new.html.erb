<!-- Sign In Form -->
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

      <!-- Radio Button Group -->
      <div class="btn-group position-relative top-0 start-50 translate-middle w-100 mt-5" role="group" aria-label="Basic radio toggle button group">
        <%= link_to 'LOGIN', new_client_user_session_path, class: "btn btn-outline-success w-50 #{'active' if current_page?(new_client_user_session_path)}" %>
        <%= link_to 'REGISTER', new_client_user_registration_path, class: "btn btn-outline-success w-50 #{'active' if current_page?(new_client_user_registration_path)}" %>
      </div>

      <%= render partial: 'client/shared/flash_sign_in_out' %>

      <!-- Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="d-grid">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "client/shared/links" %>
      </div>
    </div>
  </div>
</div>