</head>

<body>
<!-- Top Navigation -->
<%= render partial: 'admin/shared/header' %>

<div class="d-flex">
  <!-- Sidebar Navigation -->
  <%= render partial: 'admin/shared/sidebar' %>

  <div class="flex-grow-1 p-3 m-5">
  <%= yield %>
  </div>

</div>
</body>
</html>