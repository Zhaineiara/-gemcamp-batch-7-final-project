<div class="container mt-4">
  <div class="card shadow mx-auto" style="max-width: 400px;"> <!-- Reduced max-width -->
    <div class="card-body text-center">
      <h2 class="card-title">Item Details</h2>

      <div class="my-3"> <!-- Reduced top and bottom margin -->
        <%= image_tag @item.item_image.url, class: "img-fluid rounded shadow-lg", style: "max-width: 100%; height: 150px;" if @item.item_image.present? %>
      </div>

      <div class="text-left"> <!-- Aligns text to the left within the container -->
        <p style="margin-bottom: 8px;">
          <strong>Name:</strong> <%= @item.name %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Quantity:</strong> <%= @item.quantity %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Minimum Tickets:</strong> <%= @item.minimum_tickets %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>State:</strong> <%= @item.state %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Batch Count:</strong> <%= @item.batch_count %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Online At:</strong> <%= @item.online_at&.strftime('%B %d, %Y %I:%M %p') %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Offline At:</strong> <%= @item.offline_at&.strftime('%B %d, %Y %I:%M %p') %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Start At:</strong> <%= @item.start_at&.strftime('%B %d, %Y %I:%M %p') %>
        </p>

        <p style="margin-bottom: 8px;">
          <strong>Status:</strong> <%= @item.status %>
        </p>
      </div>

      <%= link_to 'Back', admin_items_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
