<h1>Edit Offer</h1>

<%= form_with(model: @offer, url: admin_offer_path(@offer), method: :patch, local: true, class: 'form') do |form| %>
  <div class="form-group">
    <%= form.label :image, "Item Image" %>
    <%= form.file_field :image, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :status, "Status" %>
    <%= form.select :status, Offer.statuses.keys.map { |key| [key.titleize, key] }, {}, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :amount, "Amount" %>
    <%= form.number_field :amount, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :coin, "Coin" %>
    <%= form.number_field :coin, class: 'form-control', required: true %>
  </div>

  <%= form.submit "Update Offer", class: 'btn btn-primary mt-4' %>
  <%= link_to 'Back', admin_offers_path, class: 'btn btn-secondary mt-4' %>
<% end %>
