<%= render 'admin/shared/validation_error' %>

<%= form_with(model: @category, url: admin_categories_path, local: true, class: "w-50 mx-auto mt-5 p-4 border rounded shadow-sm bg-light") do |form| %>
  <h2 class="text-center text-primary mb-4">Create Category</h2>

  <div class="form-group mb-3">
    <%= form.label :name, "Category Name", class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :sort, 'Sort Order', class: 'form-label' %>
    <%= form.select :sort, (@category_sort_values || []), { }, class: 'form-select' %>
  </div>

  <div class="form-group text-center">
    <%= form.submit "Create Category", class: "btn btn-primary w-100" %>
  </div>

  <div class="form-group text-center mt-3">
    <%= link_to 'Back to Category', admin_categories_path, class: 'btn btn-success w-100' %>
  </div>
<% end %>