<h1>Category</h1>

<%= link_to 'New', new_admin_category_path %>

<table>
  <thead>
  <td>title</td>
  <td>action</td>
  </thead>

  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to :edit, edit_admin_category_path(category) %></td>
      <td><%= button_to :delete, admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>

