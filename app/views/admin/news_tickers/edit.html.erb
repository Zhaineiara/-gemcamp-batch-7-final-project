<%= form_with(model: @news_ticker, url: admin_news_ticker_path, method: :patch, local: true, class: "w-50 mx-auto mt-5 p-4 border rounded shadow-sm bg-light") do |form| %>
  <h2 class="text-center text-primary mb-4">Create News Ticker</h2>

  <div class="form-group mb-3">
    <%= form.label :content, "Content", class: "form-label fw-bold" %>
    <%= form.text_area :content, class: "form-control", placeholder: "Enter the content", required: true %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :status, "Status", class: "form-label fw-bold" %>
    <%= form.select :status, NewsTicker.statuses.keys.map { |key| [key.titleize, key] }, { prompt: "Select Status" }, class: "form-control", required: true %>
  </div>

  <div class="form-group text-center">
    <%= form.submit "Update News Ticker", class: "btn btn-primary w-100" %>
  </div>

  <div class="form-group text-center mt-3">
    <%= link_to 'Back to News Ticker List', admin_news_tickers_path, class: 'btn btn-success w-100' %>
  </div>
<% end %>